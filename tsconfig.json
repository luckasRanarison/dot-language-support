{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom" // for console
    ],

    "moduleResolution": "node",

    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,

    "strict": true,

    "noUnusedLocals": false, // TODO: Fix
    "noImplicitReturns": true,
    "noUnusedParameters": false, // TODO: Fix
    "noFallthroughCasesInSwitch": true,

    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "tests/**/*.spec.ts"
  ]
}
